table.table
  thead
    tr
      th(scope='col') User Name
      th(scope='col') First Name
      th(scope='col') Email
      th(scope='col') In a Group?
      th
  tbody
    each user in userList
      tr
        td
          a(href='/users/' + user._id)= user.userName
        td= user.firstName
        td= user.email
        td= user.partOfGroup
        td
          if addingUserToTeam
            form(action='/users/' + user._id + '/delete' method="POST" style="float: right; width: 87% ")
              button.btn.btn-danger(type='submit') Delete
        td
          if removingUserFromTeam
            form(action='/teams/edit/removemember/'+user._id method="POST" style="float: right; width: 87% ")
              button.btn.btn-danger(type='submit') Remove
