extends layout.pug

block content
  h1.mt-5= userName
  form(method="POST")
    .form-group
      label(for='userName') User Name
      input#userName.form-control(type='text', placeholder='Enter User Name', name="userName", value = user.userName)
    .form-group
      label(for='firstName') First Name
      input#firstName.form-control(type='text', placeholder='Enter First Name',
      name="firstName", value = user.firstName)
    .form-group
      label(for='lastName') Last Name
      input#lastName.form-control(type='text', placeholder='Enter Last Name',
      name="lastName", value = user.lastName)
    .form-group
      label(for='email') Email
      input#email.form-control(type='text', placeholder='uname@school.edu',
      name="email", value = user.email)
    .form-group
      label(for='phoneNumber') Phone Number
      input#phoneNumber.form-control(type='text', placeholder='630-123-4567',
      name="phoneNumber", value = user.phoneNumber)
    button.btn.btn-primary(type='submit') Submit
