extends layout.pug

block content
  h1.mt-5 Teams
    a.btn.btn-primary(href='./teams/new/' style='margin-left: 25px') Create New Team
  table.table
    thead
      tr
        th(scope='col') Team Name
        th(scope='col') Project Description
        th(scope='col') Max Team Size
        th(scope='col') Is Full?
        th(scope='col') Delete?
        th
        th
    tbody
      each team in teamList
        tr
          td
            a(href='/teams/' + team._id)= team.teamName
          td= team.projectDescription
          td= team.maxTeamSize
          td= (team.isFull == true? 'Yes':'No')
          td
            form(action='/teams/' + team._id + '/delete' method="POST" style="float: right; width: 87% ")
              button.btn.btn-danger(type='submit') Delete
          td
            a.btn.btn-primary(href='./teams/' + team.id + '/update') Edit
          td
            a.btn.btn-primary(href='/users/team/' + team._id) Add User
